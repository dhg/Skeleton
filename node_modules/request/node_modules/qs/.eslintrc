{
    "root": true,

    "extends": "@ljharb",

    "rules": {
        "complexity": [2, 25],
        "consistent-return": 1,
        "id-length": [2, { "min": 1, "max": 25, "properties": "never" }],
        "indent": [2, 4],
        "max-params": [2, 11],
        "max-statements": [2, 42],
        "no-extra-parens": 1,
        "no-continue": 1,
        "no-magic-numbers": 0,
        "no-restricted-syntax": [2, "BreakStatement", "DebuggerStatement", "ForInStatement", "LabeledStatement", "WithStatement"],
        "operator-linebreak": 1
    }
}
